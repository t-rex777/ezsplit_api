{
  "name": "ezsplit_api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/app.js",
  "scripts": {
    "build": "npx tsc",
    "db:setup": "docker-compose up -d",
    "db:migrate": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:seed": "npx tsx ./src/db/seed.ts",
    "lint": "eslint src/**/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:api": "nodemon --watch './**/*.ts' --exec 'ts-node' ./src/app.ts",
    "dev": "cross-env NODE_ENV=development run-s db:setup db:migrate dev:api",
    "prod": "NODE_ENV=production nodemon --watch './**/*.ts' --exec 'ts-node' ./src/app.ts",
    "start:api": "node dist/src/app.js",
    "start": "run-s db:migrate start:api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
